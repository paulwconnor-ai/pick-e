{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Pick-e (direct binary + fixed CWD)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/pick-e",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/target/debug",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build-native",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
